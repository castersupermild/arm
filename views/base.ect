<!DOCTYPE html>
<html>
  <% content %>
  <head>
    <meta charset="utf-8">
    <% content 'title' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons' rel="stylesheet">
    <link href="https://unpkg.com/vuetify/dist/vuetify.min.css" rel="stylesheet">
    <script async src="https://unpkg.com/babel-polyfill/dist/polyfill.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <% content 'stylesheets' %>
    <style>
      .list__tile__title label {
        font-size: 13px;
        color: black;
      }

      .rateMatchButton {
        padding-left: 3px;
        height: 32px;
      }

      .list__tile__action .fa-fire {
        padding-left: 3px;
      }

      a.appTitle {
        text-decoration: none !important;
        color: black;
      }
    </style>
  </head>
  <body>
    <div id="app">
      <v-app>
        <arm-nav :logined="logined" :match-ready="matchReady" :active-user-count="activeUserCount" :no-polling="noPolling"></arm-nav>
        <v-content>
          <v-container>
            <% content 'body' %>
          </v-container>
        </v-content>
        <% include 'common/footer' %>
      </v-app>
    </div>
    <input type="hidden" id="csrfToken" value="<%= @req.csrfToken() %>">
    <% if @helpers.user.existsSession(@req) : %>
      <input type="hidden" id="currentUser" value="<%= @helpers.user.getTwitterId(@req) %>">
      <input type="hidden" id="activeUserCount" value="<%= @helpers.user.getActiveUserCount() %>">
      <% if @helpers.user.isMatchReady(@req) : %>
        <input type="hidden" id="matchReady">
      <% end %>
      <% if @noPolling : %>
        <input type="hidden" id="noPolling">
      <% end %>
    <% end %>
    <% content 'scripts' %>
  </body>
</html>
